{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Get_Access_Token": {
                "inputs": {
                    "authentication": {
                        "audience": "https://management.core.windows.net",
                        "type": "ManagedServiceIdentity"
                    },
                    "body": {
                        "permissionType": "Contributor",
                        "scope": "Account"
                    },
                    "method": "POST",
                    "uri": "https://management.azure.com/subscriptions/@{parameters('subscription_id')}/resourceGroups/@{parameters('account_rg')}/providers/Microsoft.VideoIndexer/accounts/@{parameters('account_name')}/generateAccessToken?api-version=2024-01-01"
                },
                "runAfter": {},
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                },
                "type": "Http"
            },
            "Parse_JSON": {
                "inputs": {
                    "content": "@body('Get_Access_Token')",
                    "schema": {
                        "properties": {
                            "accessToken": {
                                "type": "string"
                            }
                        },
                        "type": "object"
                    }
                },
                "runAfter": {
                    "Get_Access_Token": [
                        "Succeeded"
                    ]
                },
                "type": "ParseJson"
            },
            "Upload_file": {
                "inputs": {
                    "method": "POST",
                    "uri": "@{parameters('endpoint')}/Accounts/@{parameters('account_id')}/Videos?name=@{parameters('videoName')}&videoUrl=@{encodeUriComponent(parameters('videoURL'))}&accessToken=@{body('Parse_JSON')?['accessToken']}&callbackUrl=@{encodeUriComponent(parameters('callbackURL'))}"
                },
                "runAfter": {
                    "Parse_JSON": [
                        "Succeeded"
                    ]
                },
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                },
                "type": "Http"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "parameters": {
            "$connections": {
                "defaultValue": {},
                "type": "Object"
            },
            "account_id": {
                "defaultValue": "",
                "type": "String"
            },
            "account_name": {
                "defaultValue": "",
                "type": "String"
            },
            "account_rg": {
                "defaultValue": "",
                "type": "String"
            },
            "callbackURL": {
                "defaultValue": "",
                "type": "String"
            },
            "endpoint": {
                "defaultValue": "https://api.videoindexer.ai/eastus",
                "type": "String"
            },
            "subscription_id": {
                "defaultValue": "1fb314ae-ebec-4d24-bca1-6c4567587237",
                "type": "String"
            },
            "videoName": {
                "defaultValue": "sampleVidoe",
                "type": "String"
            },
            "videoURL": {
                "defaultValue": "https://vi2kusto.blob.core.windows.net/videofile/cars2.mp4?sp=r&st=2024-06-19T14:10:32Z&se=2024-06-19T22:10:32Z&skoid=aebc593a-46c5-4301-9f0d-42f78f6a8964&sktid=72f988bf-86f1-41af-91ab-2d7cd011db47&skt=2024-06-19T14:10:32Z&ske=2024-06-19T22:10:32Z&sks=b&skv=2022-11-02&spr=https&sv=2022-11-02&sr=b&sig=6GDw50TWKyeMROwMJAGCLMI4dbbKUMZZhsbYZFBMWcQ%3D",
                "type": "String"
            }
        },
        "triggers": {
            "Recurrence": {
                "evaluatedRecurrence": {
                    "frequency": "Week",
                    "interval": 3
                },
                "recurrence": {
                    "frequency": "Week",
                    "interval": 3
                },
                "type": "Recurrence"
            }
        }
    },
    "parameters": {
        "$connections": {
            "value": {}
        }
    }
}